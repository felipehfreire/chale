<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    
    

 	
	<navigation-rule>
		<!--  *  indica que pode ser aplicado a qualuqer tela do diretorio -->
		  <from-view-id>/*</from-view-id>
		  
		  <navigation-case>
		    <from-outcome>consultarProdutos</from-outcome>
		    <to-view-id>/consultarProdutos.xhtml</to-view-id>
		  </navigation-case>
		  <navigation-case>
		    <from-outcome>cadastrarProdutos</from-outcome>
		    <to-view-id>/cadastrarProdutos.xhtml</to-view-id>
		  </navigation-case>
		  
		  <navigation-case>
		    <from-outcome>consultarPedidos</from-outcome>
		    <to-view-id>/consultarPedidos.xhtml</to-view-id>
		  </navigation-case>
		  <navigation-case>
		    <from-outcome>cadastrarPedidos</from-outcome>
		    <to-view-id>/cadastrarPedidos.xhtml</to-view-id>
		  </navigation-case>
		  
		  <navigation-case>
		    <from-outcome>consultarClientes</from-outcome>
		    <to-view-id>/consultarCliente.xhtml</to-view-id>
		  </navigation-case>
		   <navigation-case>
		    <from-outcome>cadastrarClientes</from-outcome>
		    <to-view-id>/cadastrarCliente.xhtml</to-view-id>
		  </navigation-case>
		  
 	</navigation-rule>

</faces-config>
